function markItemAsAddedToCart() {
  const cartBtn = document
    .querySelector("a[href='/join_table_item_carts?id=<%= @id %>']");

  const itemInCart = document.createElement('p');
  itemInCart.innerText = 'Ce produit est déjà dans votre panier.';

  cartBtn.parentNode.replaceChild(itemInCart, cartBtn);

  const myCart = document
    .querySelector('.cart-items-count')

  myCart.innerText = "(<%= @cart_items_count %>)"
}

markItemAsAddedToCart();