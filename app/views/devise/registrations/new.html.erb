<div class="form-page">
  <div class="form-page__form">
    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <br />

      <div class="field">
        <%= f.label "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "Mot de passe" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "mot-de-passe" %>
      </div>

      <div class="field">
        <%= f.label "Confirmation du mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "mot-de-passe" %>
      </div>

      <div class="actions">
        <%= f.submit "M'inscrire üéâ", class:"btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>